<div class="vertical-center">
<div class="container">
  <div class="page-header">
      <div class="row">
    <div class="user-page col-xs-12">
      <h1>Resend unlock instructions</h1>
    </div>
</div>
</div>
  
  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, role: 'form') do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Resend unlock instructions', class: 'btn btn-warning btn-block btn-lg' %>
        </div>

      <% end %>
    </div>
    <div class="col-md-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
</div>